mixin reviewCard(rev)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${rev.user.image}`, alt=`${rev.user.name}`)
            h6.reviews__user= rev.user.name
        p.reviews__text= rev.review
        .reviews__rating
            each i in [1, 2, 3, 4, 5]
                svg.reviews__star(class=`reviews__star--${rev.rating <= i ? 'inactive' : 'active'}`)
                    use(xlink:href='/img/icons.svg#icon-star')
